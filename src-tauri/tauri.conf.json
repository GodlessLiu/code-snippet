{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "code-snippet",
    "version": "0.4.8"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "setFocus": true,
        "show": true,
        "startDragging": true,
        "setPosition": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "readDir": true,
        "exists": true,
        "scope": [
          "$APPDATA/snippets/",
          "$APPDATA/snippets/**/*"
        ]
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "path": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "decorations": false,
        "title": "code-snippet",
        "height": 400,
        "width": 300,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}